<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
				"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
				"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
	<hibernate-mapping package="com.beans">  <!-- 实体类的包名 -->
				<class name="Book" table="book"> <!-- 实体类名和数据库表的名字 -->
					<id name="bid"> <!-- name值为实体类中的属性名 -->
						<generator class="native"></generator><!-- native 指定主键生成策略 -->
					</id>
					<version name="versionNo"></version>
					<property name="bname"></property><!--实体类的属性名 -->
					<property name="number"></property>
					
				</class>
			</hibernate-mapping>